{"components/papathemes/sections/section-categories-grid":"{{!--\nArguments:\n    - categories (array)\n    - limit (number)\n    - style (string)\n--}}\n<h2 class=\"papathemes-categoriesGrid-heading {{#if style}}papathemes-categoriesGrid-heading--{{style}}{{/if}}\"><span>{{lang 'papathemes.categories_grid.heading'}}</span></h2>\n<section class=\"papathemes-categoriesGrid-section {{#if style}}papathemes-categoriesGrid-section--{{style}}{{/if}}\">\n    <ul class=\"papathemes-categoriesGrid\">\n        {{#each (limit categories limit)}}\n        <li class=\"papathemes-categoriesGrid-item\">\n            <article class=\"papathemes-categoriesGrid-card\">\n                {{#if image}}\n                <figure class=\"papathemes-categoriesGrid-figure\">\n                    <a href=\"{{url}}\"><img class=\"papathemes-categoriesGrid-image\" src=\"{{getImage image 'category_card_size'}}\" alt=\"{{name}}\" /></a>\n                    <figcaption>\n                        <div class=\"figcaption-body\"></div>\n                    </figcaption>\n                </figure>\n                {{/if}}\n                <div class=\"papathemes-categoriesGrid-body\">\n                    <h4 class=\"papathemes-categoriesGrid-name\">\n                        {{name}}\n                    </h4>\n                    <div class=\"papathemes-categoriesGrid-productsCount\">\n                        {{lang 'papathemes.categories_grid.products_count' count=count}}\n                    </div>\n                </div>\n            </article>\n        </li>\n        {{/each}}\n    </ul>\n</section>\n"}
